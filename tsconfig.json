{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [ "ES2019" ],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "target": "ES2017",
        "useDefineForClassFields": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "test"
    ]
}